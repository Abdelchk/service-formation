{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <h1>Liste des projets</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Budget initial</th>
                <th>Seuil d'alerte</th>
                <th>Client</th>
                <th>Formateur référent</th>
            </tr>
        </thead>
        <tbody>
            {% for projet in projets %}
                <tr>
                    <td>{{ projet.nom }}</td>
                    <td>{{ projet.budgetInitial }} €</td>
                    <td>{{ projet.seuilAlerte }} €</td>
                    <td>{{ projet.idClient.nom }}</td>
                    <td>{{ projet.formateurReferent.nom }}</td>
                    <td>
                    <a href="{{ path('projet_delete', { id: projet.id }) }}" class="btn btn-danger mb-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');">Supprimer</a>
                </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun projet trouvé.</td>
                </tr>
            {% endfor %}
            <a href="{{ path('projet_add') }}" class="btn btn-success mb-3">Ajouter un projet</a>
        </tbody>
    </table>
{% endblock %}